{
  "name": "things-app",
  "version": "1.0.0",
  "description": "The Things web app",
  "main": "index.js",
  "scripts": {
    "start": "babel-node server/server.js",
    "build:server": "babel server/server-es6.js --out-file server/server.js",
    "build:client": "webpack -p --config webpack.prod.config.js --progress",
    "build": "better-npm-run build",
    "clean": "rimraf dist/* && rimraf server/server.js"
  },
  "betterScripts": {
    "build": {
      "command": "npm run build:server && npm run build:client",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "better-npm-run": "0.0.15",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "5.0.5",
    "redux": "3.7.1",
    "socket.io-client": "2.0.3"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "file-loader": "^0.11.2",
    "react-hot-loader": "^1.3.1",
    "webpack": "^3.0.0",
    "webpack-dev-server": "^2.5.0"
  }
}
